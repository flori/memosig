# vim: set ft=ruby:

search do
  prune_dirs /\A(\.svn|\.git|CVS|tmp|tags|coverage|yard)\z/
  skip_files /(\A\.|\.sw[pon]\z|\.(log|fnm|jpg|jpeg|png|pdf|svg)\z|tags|errors\.lst|~\z)/i
end

discover do
  prune_dirs /\A(\.svn|\.git|CVS|tmp|tags|coverage|yard)\z/
  skip_files /(\A\.|\.sw[pon]\z|\.log\z|~\z)/
  binary false
end

strip_spaces do
  prune_dirs /\A(\..*|CVS)\z/
  skip_files /(\A\.|\.sw[pon]\z|\.log\z|~\z)/
end

probe do
  test_framework :'rspec'
end
